{% extends 'PiniuUsersBundle::layout.html.twig' %}

{% block body %}
    <header>
        <h1>Logowanie</h1>
    </header>

    {% for flashMessage in app.session.flashbag.get('login-error') %}
        <div class="login-error">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <form action="{{ path('piniu_users_login_check') }}" method="post" class="login">
        <div>
            <label for="username">Użytkownik lub email:</label>
            <input type="text" id="username" name="_username" value="{{ username }}" required>
        </div>
        <div>
            <label for="password">Hasło:</label>
            <input type="password" id="password" name="_password" required>
        </div>
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}
        <button type="submit">login</button>
    </form>
{% endblock %}